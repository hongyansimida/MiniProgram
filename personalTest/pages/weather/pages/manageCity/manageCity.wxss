page {
    line-height: 1.6;
	/* background-image: -webkit-radial-gradient(0% 100%,circle,#75D373 0%,#85DE7A 25%, #56B66B 50%,#2A8D5A 75%, #04543A 100%); */
	background-color: #f8f8f8;
}
.search_box{
	margin: 20rpx auto;
	position: relative;
	box-sizing: border-box;
	width: 90%;
	height: 80rpx;
	line-height: 80rpx;
	
	background: #fff;
}
.search_box .search_inpt{
	border: 1px solid #888;
	/* border-radius: 8rpx; */
	box-sizing: border-box;
	width: 100%;
	height: 100%;
	padding: 0 100rpx 0 20rpx;
}
.search_box .search_clear{
	position:absolute;
	right: 20rpx;
	top: 50%;
	margin-top: -12px;
	border: none;
	height: 100%;

	box-sizing: border-box;
}
.search_box .respons_list{
	box-sizing: border-box;
	position: absolute;
	width: 100%;
	/* bottom: 0; */
	left: 0;
	background: #fff;
	z-index: 10;
	border-right: 1px solid #aaa;
	border-left: 1px solid #aaa;
	/* border-top: none; */
}
.respons_list .respons_item{
	padding: 0 20rpx;
	line-height: 75rpx;
	border-bottom: 1px solid #aaa;
}
.city_list{
	flex: 1;
	height: 100%; 
	box-sizing: border-box;
	overflow: auto; 
	/* padding: 20rpx; */
}
.city_list .city_item {
	background: #fff;
	line-height: 100rpx;
	
	/* margin-left: 1em; */
	  padding: 0 2em 0 2em;  
	 position: relative;
}
.city_list .city_item::after{
	box-sizing: border-box;
	content: "";
	display: block;
	height: 0;
	width: 100%;
	position: absolute; 
	bottom: 0; 
	/* left:0;  */
	left: 2em; 
	border-bottom: 1rpx solid #aaa;
}
.right{
	float: right;
}